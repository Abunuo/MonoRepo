{
  "name": "monorepo",
  "version": "independent",
  "description": "一个包含了 react 基础项目，vue 基础项目，Svelte 基础项目及公共 Utils 函数库等的 monorepo 项目",
  "private": true,
  "scripts": {
    "add": "pnpm add --filter",
    "start:react": "pnpm -C ./packages/MonoReact start",
    "start:vue": "pnpm -C ./packages/MonoVue start",
    "start:svelte": "pnpm -C ./packages/MonoSvelte dev",
    "build:utils": "pnpm -C ./packages/MonoUtils build",
    "clean": "rm -rf node_modules ./packages/*/node_modules",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "monoRepo",
    "react",
    "vue",
    "Svelte",
    "Typescript"
  ],
  "author": "Abunuo",
  "license": "MIT",
  "homepage": "git@github.com:Abunuo/MonoRepo.git",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.54.1",
    "eslint": "^8.35.0",
    "eslint-config-standard-with-typescript": "^34.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^15.6.1",
    "eslint-plugin-promise": "^6.1.1",
    "lerna": "^7.1.4",
    "sass": "^1.58.3",
    "typescript": "^5.0.3"
  },
  "engines": {
    "node": ">=16",
    "pnpm": ">=8"
  }
}